<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:layout_margin="@dimen/padding"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/sectionName"
        style="@style/Section"
        tools:text="politics" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginStart="@dimen/margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/articleName"
            style="@style/WrapWrap.ListItem"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/bigText"
            tools:text="@string/article_title" />

        <TextView
            android:id="@+id/authorName"
            style="@style/WrapWrap.ListItem"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textSize="@dimen/smallText"
            tools:text="@string/author_name" />

        <TextView
            android:id="@+id/datePublished"
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:fontFamily="monospace"
            android:gravity="bottom"
            android:textColor="@color/grey"
            android:textSize="@dimen/dateTextSize"
            tools:text="@string/date_published" />

    </LinearLayout>
</LinearLayout>

